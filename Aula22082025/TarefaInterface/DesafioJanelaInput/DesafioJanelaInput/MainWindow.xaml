<Window x:Class="DesafioJanelaInput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesafioJanelaInput"
        mc:Ignorable="d"
        Title="MainWindow" Height="289" Width="432">
    <Grid Margin="10">
        <Border BorderBrush="Black" BorderThickness="1">
            <Grid>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="231" Width="390" >
                    <TextBox x:Name="Input1" HorizontalAlignment="Left" Margin="143,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="27" TextChanged="Input1_TextChanged"/>
                    <Label Content="Digite seu nome" HorizontalAlignment="Left" Margin="20,29,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="Input2" HorizontalAlignment="Left" Margin="143,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="27" TextChanged="Input2_TextChanged"/>
                    <Label Content="Digite seu nome" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="Output1" HorizontalAlignment="Left" Margin="26,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" Height="27" IsEnabled="False"/>
                    <Label Content="Seu nome completo é:" HorizontalAlignment="Left" Margin="20,135,0,0" VerticalAlignment="Top" Width="133"/>
                    <Button Content="Clique Aqui!" HorizontalAlignment="Left" Margin="292,91,0,0" VerticalAlignment="Top" Height="25" Width="81" Click="Button_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
