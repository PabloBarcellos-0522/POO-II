<Window x:Class="ConversorTemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConversorTemp"
        mc:Ignorable="d"
        Title="MainWindow" HorizontalAlignment="Center" VerticalAlignment="Center" Width="214" Height="100">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="NaN">
        <TextBox x:Name="InputTMP" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" Height="26" TextChanged="InputTMP_TextChanged"/>
        <Label Content="Celcius" HorizontalAlignment="Left" VerticalAlignment="Top" Width="107" Height="26" Margin="108,0,0,0"/>
        <Label x:Name="OutputTMP" Content="32º Fahrenheit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="107" Height="26" Margin="108,26,0,0"/>
        <Button Content="Converter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" Height="26" Margin="0,26,0,0" Click="Button_Click"/>

    </Grid>
</Window>
